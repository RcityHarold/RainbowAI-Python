# 应用配置
DEBUG=False

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DB_URL=memory  # memory 或 SurrealDB URL，例如 ws://localhost:8000/rpc
DB_USER=root
DB_PASSWORD=root
DB_NAMESPACE=rainbow
DB_DATABASE=dialogue

# LLM配置
LLM_PROVIDER=mock  # mock, openai, azure
LLM_API_KEY=your_api_key_here
LLM_API_URL=  # 对于Azure，需要提供完整URL
LLM_MODEL=gpt-3.5-turbo  # 或其他模型名称

# 对话配置
MAX_CONTEXT_LENGTH=4000
RESPONSE_WINDOW_HOURS=3
SESSION_TIMEOUT_HOURS=1

# 工具配置
WEATHER_API_KEY=your_weather_api_key
SEARCH_API_KEY=your_search_api_key

# 日志配置
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/rainbow.log  # 留空表示只输出到控制台

# CORS配置
CORS_ORIGINS=*  # 逗号分隔的允许来源列表，* 表示允许所有来源
